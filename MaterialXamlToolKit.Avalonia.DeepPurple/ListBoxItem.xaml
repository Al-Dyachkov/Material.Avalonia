<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleLighten3Brush}" />
    </Style>

    <Style Selector="ListBoxItem:selected:focus /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleLighten2Brush}" />
    </Style>

    <Style Selector="ListBoxItem:selected:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleLighten2Brush}" />
    </Style>

    <Style Selector="ListBoxItem:selected:focus:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleLighten1Brush}" />
    </Style>
    <Style Selector="ListBoxItem:selected">
        <Setter Property="Foreground" Value="White" />
    </Style>
</Styles>