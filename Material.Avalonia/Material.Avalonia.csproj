<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>0.9</PackageVersion>
        <Title>Material.Avalonia</Title>
        <Authors>Larymar&lt;f98f96&gt;</Authors>
        <Description>This repository is a set of styles that will help you customize your application in an appropriate material design.</Description>
        <PackageProjectUrl>https://github.com/CreateLab/material.avalonia</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/CreateLab/material.avalonia/blob/master/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/CreateLab/material.avalonia</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <LangVersion>8</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\MaterialXamlToolKit.Avalonia\MaterialXamlToolKit.Avalonia.csproj" />
    </ItemGroup>
    <ItemGroup>
        <AvaloniaResource Include="**\*.xaml">
            <SubType>Designer</SubType>
        </AvaloniaResource>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Avalonia" Version="0.10.0-preview2" />
    </ItemGroup>

</Project>
