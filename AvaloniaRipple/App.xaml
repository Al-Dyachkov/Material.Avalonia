<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:r="clr-namespace:Ripple;assembly=Ripple"
             xmlns:themes="clr-namespace:MaterialXamlToolKit.Avalonia.Themes;assembly=MaterialXamlToolKit.Avalonia"
             x:Class="AvaloniaRipple.App">
    <Application.Resources>
        <themes:BundledTheme BaseTheme="Light" PrimaryColor="Amber" SecondaryColor="Blue"/>
        <SolidColorBrush x:Key="RippleEffectBrush" Color="#4CAF50" />
    </Application.Resources>
    <Application.Styles>
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
    </Application.Styles>
</Application>