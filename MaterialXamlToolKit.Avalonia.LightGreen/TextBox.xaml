<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  


  <Style Selector="TextBox:focus /template/ Border#fborder">
    <Setter Property="BorderBrush" Value="{DynamicResource LightGreenDarken4Brush}" />
  </Style>
  <Style Selector="TextBox:pointerover /template/ Border#fborder">
    <Setter Property="BorderBrush" Value="{DynamicResource LightGreenLighten1Brush}" />
  </Style>
  <Style Selector="TextBox /template/ Border#fborder">
    <Setter Property="BorderBrush" Value="{DynamicResource LightGreenLighten3Brush}" />
  </Style>
  <Style Selector="TextBox:focus:pointerover /template/ Border#fborder">
    <Setter Property="BorderBrush" Value="{DynamicResource LightGreenDarken1Brush}" />
  </Style>
  <Style Selector="TextBox:disabled">
    <Setter Property="BorderBrush" Value="{DynamicResource GreyBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource GreyBrush}" />
  </Style>

</Styles>