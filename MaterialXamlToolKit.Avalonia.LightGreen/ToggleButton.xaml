<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="ToggleButton:checked /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource LightGreenBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource LightGreenLighten1Brush}" />
        <Setter Property="TextBlock.Foreground" Value="White" />
    </Style>
    <Style Selector="ToggleButton:pointerover /template/ ContentPresenter">
        <Setter Property="BorderBrush" Value="{DynamicResource LightGreenLighten3Brush}" />
    </Style>
    <Style Selector="ToggleButton">
        <Setter Property="Background" Value="{DynamicResource LightGreenLighten5Brush}" />
    </Style>
</Styles>