<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="ToggleButton:checked /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DeepPurpleLighten1Brush}" />
        <Setter Property="TextBlock.Foreground" Value="White" />
    </Style>
    <Style Selector="ToggleButton:pointerover /template/ ContentPresenter">
        <Setter Property="BorderBrush" Value="{DynamicResource DeepPurpleLighten3Brush}" />
    </Style>
    <Style Selector="ToggleButton">
        <Setter Property="Background" Value="{DynamicResource DeepPurpleLighten5Brush}" />
    </Style>
</Styles>